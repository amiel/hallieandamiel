<h2>Photos</h2>

<%= form_tag '/photos/approve' do %>

  <ul class="thumbnails">
    <% for photo in @photos %>
      <li>
        <%= link_to image_tag(photo.photo.url(:thumbnail)), [@tag, photo] %>
        <%= check_box_tag 'approve[]', photo.id, true %>
      </li>
    <% end %>
  </ul>

  <%= submit_tag "Approve all selected photos" %>

<% end %>

<%= paginate @photos %>

